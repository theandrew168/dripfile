{
	"compilerOptions": {
		// compiler config
		"noEmit": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"strict": true,
		"strictNullChecks": true,

		// output config
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"module": "ES2020",
		"moduleResolution": "node",
		"target": "ES2020",
	},
	"include": [
		"frontend"
	]
}

